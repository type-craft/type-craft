{
  "name": "@type-craft/crafting",
  "description": "Custom Elements to craft TypeCraft types",
  "license": "MIT",
  "author": "guillem.cordoba@gmail.com",
  "version": "0.0.2",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./craft-type": "./dist/definitions/craft-type.js",
    "./craft-fields": "./dist/definitions/craft-fields.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"npm run build:watch\" \"wds\"",
    "build": "tsc && npm run analyze -- --exclude dist",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore"
  },
  "dependencies": {
    "@open-wc/scoped-elements": "^2.0.1",
    "@scoped-elements/material-web": "^0.0.16",
    "@type-craft/vocabulary": "^0.0.1",
    "lit": "^2.0.2",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^4.3.0",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@type-craft/content": "^0.0.3",
    "@type-craft/date-time": "^0.0.4",
    "@type-craft/title": "^0.0.4",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-rollup": "^0.3.15",
    "concurrently": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "type": "module",
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-plusplus": "off",
      "no-return-assign": "off",
      "no-param-reassign": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
